@{
}

<div class="container">
	<div row>
		<div class="alert-danger">
			<h3>¿ Estás seguro que deseas eliminar el producto: @Model.Nombre con ID: @Model.Id ?</h3>
		</div>

		<div class="col-6">

			<br />
			<a class="btn btn-danger" href="@Url.Action("Delete", "Productos", new{Id = Model.Id})">Eliminar</a>
			@Html.ActionLink("Regresar", "Index", "Productos", new { @class = "btn btn-danger" })
		</div>
	</div>
</div>
