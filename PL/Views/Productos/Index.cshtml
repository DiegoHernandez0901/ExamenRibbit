@model ML.Producto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}

<h1 class="text-center my-4">Productos</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col text-end">
            <a class="btn btn-success" href="@Url.Action("Form", "Productos")">Crear Producto</a>
        </div>
    </div>
    @if (Model.Productos != null && Model.Productos.Any())
    {
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Detalles</th>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Fecha de Creación</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Producto producto in Model.Productos)
                    {
                        <tr>
                            <td><a class="btn btn-warning" href="@Url.Action("Details", "Productos", new { Id = producto.Id })">Detalles</a></td>
                            <td>@producto.Id</td>
                            <td>@producto.Nombre</td>
                            <td>@producto.Descripcion</td>
                            <td>@String.Format("{0:C}", producto.Precio)</td>
                            <td>@producto.CantidadStock</td>
                            <td>@producto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td><a class="btn btn-danger" href="@Url.Action("Delete", "Productos", new { Id = producto.Id, Nombre = producto.Nombre })">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="row">
            <div class="alert alert-danger text-center">
                @ViewBag.Message
            </div>
        </div>
    }
</div>
