@model ML.Producto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                
                <div class="card-body">
                    <h5 class="card-title">@Model.Nombre</h5>
                    <p class="card-text">Descripción: @Model.Descripcion</p>
                    <p class="card-text">Stock: <strong>@Model.CantidadStock</strong></p>
                    <p class="card-text">Precio: <strong>$ @Model.Precio</strong></p>
                    <p class="card-text">Creado el: <strong>@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</strong></p>
                </div>
                <div class="card-body d-flex justify-content-between">
                    <a href="@Url.Action("Form", "Productos", new { Id = Model.Id })" class="btn btn-warning">Editar</a>
                    
                    <a href="@Url.Action("Index", "Productos")" class="btn btn-primary">
                        <i class="bi bi-trash3"></i> Regresar
                    </a>
                    <a href="@Url.Action("Delete", "Productos", new { Id = Model.Id })" class="btn btn-danger">
                        <i class="bi bi-trash3"></i> Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>